<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content" 
    			android:id="@+id/float_window"
    			android:layout_gravity="center">
    <ImageButton
	    android:id="@+id/float_top"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerInParent="true"
	    android:clickable="false"
	    android:visibility="gone"
	    android:background="#00000000"
	    android:src="@drawable/xuanfu_bg03_en" />
	<RelativeLayout 
    	android:id="@+id/table_layout"
    	android:visibility="gone"
    	android:layout_centerInParent="true"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content" >
    <ImageView
        android:id="@+id/panelimage"
        android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerInParent="true"
	    android:src="@drawable/xuanfu_bg02"/>
    <ImageView
        android:id="@+id/needle"
        android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerInParent="true"
        android:src="@drawable/xuanfuz_zhizhen" />
</RelativeLayout>
  <ImageButton
        android:id="@+id/float_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:layout_centerInParent="true"
		android:background="#00000000"
        android:src="@drawable/xuanfu_bg01_en" />
</RelativeLayout>