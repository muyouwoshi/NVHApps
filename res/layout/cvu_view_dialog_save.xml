<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/dialog_title_layout"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/welcome_title_corners_bg" >

        <TextView
            android:id="@+id/c_dialog_title"
            android:layout_width="400dp"
            android:layout_height="45dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/save_title"
            android:textColor="#191970"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/corners_bg2"
            android:orientation="vertical" >

<!--             <EditText -->
<!--                 android:id="@+id/c_dialog_edit" -->
<!--                 android:layout_width="fill_parent" -->
<!--                 android:layout_height="35dp" -->
<!--                 android:layout_marginBottom="20dp" -->
<!--                 android:layout_marginLeft="20dip" -->
<!--                 android:layout_marginRight="20dip" -->
<!--                 android:layout_marginTop="25dp" -->
<!--                 android:hint="请输入自定义项目名称" -->
<!--                 android:background="#FFFFFF" > -->
<!--             </EditText> -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/c_dialog_ok"
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dip"
                    android:layout_weight="1"
                    android:background="@drawable/btn_gray"
                    android:text="@string/ok"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/c_dialog_cancel"
                    android:layout_width="10dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_gray"
                    android:text="@string/cancel"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/c_dialog_other"
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_gray"
                    android:text="The project where the template is loaded"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />
            </LinearLayout>

<!--             <CheckBox -->
