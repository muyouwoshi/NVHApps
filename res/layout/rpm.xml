<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/RPM_layout"
    android:background="?attr/rpm" >
<!--============================RPM标题 ==========================-->
    <TextView
        android:id="@+id/RPM_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="?attr/all_title"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="@string/RPM" 
        android:textColor="?attr/all_title_text"/>
    
    <ImageButton
        android:id="@+id/Back_Rpm"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@string/app_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="?attr/back_button" />
  <!--============================开关按钮 ==========================-->   
    <RelativeLayout
        android:id="@+id/SwitchLayout"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_below="@+id/RPM_title" >
    <Switch
        android:id="@+id/RPMSwitchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
          android:textOff="@string/SwitchButtonOff"  
        android:textOn="@string/SwitchButtonOn"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/Switch_Line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#3C404C"
        android:layout_below="@+id/SwitchLayout"/> 
<!--============================Display ==========================-->
	<RelativeLayout
    	android:id="@+id/RPM_Layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/rpm"
        android:layout_below="@+id/Switch_Line"> 
    <TextView
        android:id="@+id/Display"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:text="@string/Display"
        android:textColor="?attr/all_title_text"/>
    <Spinner
        android:id="@+id/RPMDisplay_spinner"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true" 
        android:entries="@array/Display"/>  
    <TextView
        android:id="@+id/Display_Line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#3C404C"
        android:layout_below="@+id/Display"/>
<!--============================X_Axis ==========================-->    
<RelativeLayout
    	android:id="@+id/Unit_Layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_below="@+id/Display_Line"> 
    <TextView
        android:id="@+id/X_Axis"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:text="@string/X_Axis" 
        android:textColor="?attr/all_title_text"/>
     <Spinner
        android:id="@+id/RPMXAxis_spinner"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:entries="@array/X_Axis"/> 
    <TextView
        android:id="@+id/XAxis_Line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#3C404C"
        android:layout_below="@+id/X_Axis"/>
<!--============================Y_Axis ==========================-->   
 	<TextView
        android:id="@+id/Y_Axis"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:layout_below="@+id/XAxis_Line"
        android:text="@string/Y_Axis" 
        android:textColor="?attr/all_title_text"/>
 	
    <Spinner
        android:id="@+id/RPMYAxis_spinner"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/XAxis_Line"
        android:entries="@array/RPM_Y_Axis"/>  
    <TextView
        android:id="@+id/YAxis_Line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#3C404C"
        android:layout_below="@+id/Y_Axis"/>
 </RelativeLayout>  
 </RelativeLayout>
</RelativeLayout>
