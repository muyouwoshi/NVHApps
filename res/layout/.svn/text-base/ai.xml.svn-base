<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:id="@+id/AI_layout"
    android:background="?attr/ai" >
<!--============================AI标题 ==========================-->
    <TextView
        android:id="@+id/AI_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="?attr/all_title"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="@string/AI" 
        android:textColor="?attr/all_title_text"/>
    
    <ImageButton
        android:id="@+id/Back_Ai"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@string/app_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="?attr/back_button" />
  <!--============================开关按钮 ==========================-->   
    <RelativeLayout
        android:id="@+id/SwitchLayout"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_below="@+id/AI_title" >
	    <Switch
	        android:id="@+id/AISwitchButton"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	            android:textOff="@string/SwitchButtonOff"  
        android:textOn="@string/SwitchButtonOn"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/Switch_Line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#3C404C"
        android:layout_below="@+id/SwitchLayout"/>   
<!--============================Mode==========================-->
	<RelativeLayout
    	android:id="@+id/AI_Layout"
    	android:background="?attr/ai"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/Switch_Line"> 
	    <TextView
	        android:id="@+id/Mode"
	        android:layout_width="match_parent"
	        android:layout_height="35dp"
	        android:gravity="center_vertical"
	        android:paddingLeft="5dp"
	        android:text="@string/Mode"
	        android:visibility="gone"
	        android:textColor="?attr/all_title_text"/>
    
    <Spinner
        android:id="@+id/AIMode_spinner"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:entries="@array/AI_Mode"/> 
        
    <TextView
        android:id="@+id/Mode_Line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#3C404C"
        android:visibility="gone"
        android:layout_below="@+id/Mode"/>
<!--============================X_Axis==========================-->
    <TextView
        android:id="@+id/X_Axis"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:layout_below="@+id/Mode_Line"
        android:text="@string/X_Axis"
        android:textColor="?attr/all_title_text" />
    <Spinner
        android:id="@+id/AIXAxis_spinner"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/Mode_Line"
        android:entries="@array/SplOrColor_X_Axis"/> 
    <TextView
        android:id="@+id/XAxis_Line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#3C404C"
        android:layout_below="@+id/X_Axis"/>
<!--============================Y_Axis==========================-->
 	<TextView
        android:id="@+id/Y_Axis"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:layout_below="@+id/XAxis_Line"
        android:text="@string/Y_Axis"
        android:textColor="?attr/all_title_text"/>
    <Spinner
        android:id="@+id/AIYAxis_spinner"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/XAxis_Line" 
        android:entries="@array/AI_Y_Axis"/> 
    <TextView
        android:id="@+id/YAxis_Line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#3C404C"
        android:layout_below="@+id/Y_Axis"/>
</RelativeLayout>
</RelativeLayout>
