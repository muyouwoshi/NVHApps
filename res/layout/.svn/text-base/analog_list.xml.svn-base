<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical" >
  <LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:gravity="center_vertical"
    	android:orientation="horizontal" >  
    <CheckBox
        android:id="@+id/Check"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="5dp"
        android:textSize="14dp"
        android:button="@drawable/checked"
        android:layout_marginLeft="7dp"
        android:layout_weight="0.6" />

    <left.drawer.CustomSpinner
        android:id="@+id/Physical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:textSize="8dp"
        android:entries="@array/Physical"
        android:clickable="true" />

    <EditText
        android:id="@+id/Transducer"
        android:labelFor="@+id/Transducer"
        android:inputType="text"
        android:singleLine="true"
        android:textSize="12sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.9"
        android:layout_marginLeft="3dp" />

    <EditText
        android:id="@+id/Point"
        android:labelFor="@+id/Point"
        android:inputType="text"
        android:textSize="12sp"
        android:singleLine="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.9"
        android:layout_marginLeft="3dp" />
    
    <left.drawer.CustomSpinner
        android:id="@+id/Direction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="12sp"
        android:entries="@array/Direction"
        android:layout_marginLeft="3dp" />
    
    <left.drawer.CustomSpinner
        android:id="@+id/Coupling"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:textSize="12sp"
        android:entries="@array/Coupling"
        android:layout_marginLeft="3dp" />
    
    <EditText
        android:id="@+id/Sensitivity"
        android:labelFor="@+id/Sensitivity"
        android:inputType="text"
        android:singleLine="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.9"
        android:textSize="12sp"
        android:layout_marginLeft="3dp" />
    
    <left.drawer.CustomSpinner
        android:id="@+id/unit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="12sp"
        android:entries="@array/Unit"
        android:layout_marginLeft="3dp" />
    
    <left.drawer.CustomSpinner
        android:id="@+id/Range"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:entries="@array/Range"
        android:textSize="12sp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="3dp" />
 </LinearLayout>
 <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#D0D0D0"/>
</LinearLayout>
