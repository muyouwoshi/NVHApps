<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
<!-- <View
                 android:layout_width="match_parent"
                 android:layout_height="0.2dp"
                 android:background="##3B3F4C"/> -->
<RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center_vertical"
      android:background="@drawable/btn_linealayout2"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/file_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
         android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:src="@drawable/ico_folder_blue" />

    <TextView
        android:id="@+id/file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:gravity="center_vertical"
        android:textColor="#FFFEFF"
        android:layout_marginLeft="52dp"
        android:text="@string/father_item" />


    <CheckBox
        android:id="@+id/file_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/checkbox"
         android:gravity="center_vertical"
        android:focusable="false"
        android:layout_marginLeft="197dp"
        android:clickable="false"
        android:focusableInTouchMode="false"
        android:visibility="visible" />
<!--    <View
                 android:layout_width="match_parent"
                 android:layout_height="0.5dp"
                 android:background="#ff0000"/>  -->
    <!--   android:layout_gravity="right" 
      style="@style/MyCheckBox"-->
</RelativeLayout>
</RelativeLayout>