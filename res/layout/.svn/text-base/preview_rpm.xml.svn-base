<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<!--============================RPM标题 ==========================-->
    <TextView
        android:id="@+id/RPM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="@string/RPM" />
     <LinearLayout
        android:id="@+id/Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RPM"
        android:orientation="horizontal" >
        <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="horizontal" >
        <TextView
        android:id="@+id/rpm_Display"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:text="@string/Display" />
    <TextView
        android:id="@+id/RPMDisplay_textview"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:textColor="#33FF33" />  
        </LinearLayout>
         <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="horizontal" >
        <TextView
        android:id="@+id/RPMX_Axis"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:text="@string/X_Axis" />
     <TextView
        android:id="@+id/RPMXAxis_textview"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:textColor="#33FF33"/> 
        </LinearLayout>
         <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="horizontal" >
        <TextView
        android:id="@+id/RPMY_Axis"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:text="@string/Y_Axis" />
 	
    <TextView
        android:id="@+id/RPMYAxis_textview"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:textColor="#33FF33"/> 
        </LinearLayout>
        </LinearLayout>
   <TextView
        android:id="@+id/Line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#465468"
        android:layout_below="@+id/Layout"/>
</RelativeLayout>
