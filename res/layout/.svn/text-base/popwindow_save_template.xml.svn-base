<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/template_name_text"
        android:layout_marginTop="10dp"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/template_name"/>
    <EditText
        android:id="@+id/template_name_edit"
        android:singleLine="true"
        android:layout_height="wrap_content"
        android:layout_width="160dp"
        android:textSize="16dp"
        android:layout_toRightOf="@+id/template_name_text"/>
    
	<Button
	    android:id="@+id/saveTemplate_ok"
	    android:layout_width="150dp"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/template_name_edit"
	    android:layout_alignParentLeft="true"
	    android:text="@string/Save"/>
	<Button
	    android:id="@+id/saveTemplate_cancle"
	    android:layout_width="150dp"
	    android:layout_height="wrap_content"
	    android:text="@string/Cancel"
	    android:layout_toRightOf="@+id/saveTemplate_ok"
	    android:layout_below="@+id/template_name_edit"/>
</RelativeLayout>
