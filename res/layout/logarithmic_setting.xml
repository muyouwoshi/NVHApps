<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="100dp"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/acceleration_log"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/acceleration_log" />

        <TextView
            android:id="@+id/a0_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.3"
            android:text="a0=" />

        <EditText
            android:id="@+id/a0_EditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.5"
            android:gravity="center"
            android:background="@drawable/input"
            android:digits=".- 0123456789"
            android:singleLine="true" />
        <RelativeLayout
		    android:layout_width="0dp"
		    android:layout_weight="1"
		    android:layout_gravity="center"
		    android:layout_height="80dp"> 
		<TextView
            android:id="@+id/a0_textview_x10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="18dp"
            android:text=" X 10" />
		<TextView
            android:id="@+id/textview_a"
            android:layout_width="wrap_content"
            android:layout_above="@+id/a0_textview_x10"
            android:layout_alignLeft="@+id/a0_textview_x10"
            android:layout_alignRight="@+id/a0_textview_x10"
            android:layout_height="wrap_content" />
		 <EditText
		    android:id="@+id/a0_EditText_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textview_a"
            android:gravity="center"
            android:background="@drawable/input"
            android:digits=".- 0123456789"
            android:singleLine="true" />
		</RelativeLayout>
		<RelativeLayout
		    android:layout_width="0dp"
		    android:layout_weight="0.4"
		    android:layout_gravity="center"
		    android:layout_height="wrap_content"> 
        <TextView
            android:id="@+id/acoustic_unit_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="m/" />
         <TextView
            android:id="@+id/acoustic_unit_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/acoustic_unit_m"
            android:layout_alignTop="@+id/acoustic_unit_m"
            android:layout_alignBottom="@+id/acoustic_unit_m"
            android:text="s" />

          <TextView
            android:id="@+id/acoustic_unit_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
           	android:layout_alignParentTop="true"
           	android:layout_alignLeft="@+id/acoustic_unit_s"
            android:textSize="10dp"
            android:text="2" />
        </RelativeLayout>
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="100dp"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/acoustic_log"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/acoustic_log" />

        <TextView
            android:id="@+id/p0_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.3"
            android:text="p0=" />

        <EditText
            android:id="@+id/p0_EditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.5"
            android:gravity="center"
            android:background="@drawable/input"
            android:digits=".- 0123456789"
            android:singleLine="true" />
 		<RelativeLayout
		    android:layout_width="0dp"
		    android:layout_weight="1"
		    android:layout_gravity="center"
		    android:layout_height="80dp"> 
		<TextView
            android:id="@+id/p0_textview_x10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
             android:textSize="18dp"
            android:text=" X 10" />
		<TextView
            android:id="@+id/textview_p"
            android:layout_width="wrap_content"
            android:layout_above="@+id/p0_textview_x10"
            android:layout_alignLeft="@+id/p0_textview_x10"
            android:layout_alignRight="@+id/p0_textview_x10"
            android:layout_height="wrap_content" />
		 <EditText
		    android:id="@+id/p0_EditText_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textview_p"
            android:gravity="center"
            android:background="@drawable/input"
            android:digits=".- 0123456789"
            android:singleLine="true" />
		</RelativeLayout>
        <TextView
            android:id="@+id/acceleration_unit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.4"
            android:text="Pa" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="100dp"
        android:layout_weight="1" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1" />

        <Button
            android:id="@+id/Save"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_weight="1.4"
            android:background="?attr/copy"
            android:text="@string/Save"
            android:textColor="#FFFEFF" />

        <Button
            android:id="@+id/Restore_default"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="1.4"
            android:background="?attr/paste"
            android:text="@string/Recover"
            android:textColor="#FFFEFF" />
    </TableRow>

</TableLayout>